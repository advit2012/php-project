pipeline {
    agent any
    stages {
        stage('Git Clone') {
            steps {
                git url: 'https://github.com/advit2012/php-project/', branch: 'master'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'sudo -S docker build -t advit2012/akshatnewimg2july:v1 .'
                    sh 'sudo -S docker images'
                }
            }
        }
        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'advit2012', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh "echo $PASS | sudo -S docker login -u $USER --password-stdin"
                    sh 'sudo -S docker push advit2012/akshatnewimg2july:v1'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    def imageTag = "advit2012/akshatnewimg2july:v1"
                    def dockerrm = 'sudo -S docker rm -f My-first-containe2211 || true'
                    def dockerCmd = "sudo -S docker run -itd --name My-first-containe2211 -p 8083:80 ${imageTag}"
                    
                    sshagent(['sshkeypair']) {
                        // Remove existing container if exists
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@172.31.35.49 ${dockerrm}"
                        // Pull the latest Docker image
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@172.31.35.49 sudo -S docker pull ${imageTag}"
                        // Run the new container
                        sh "ssh -o StrictHostKeyChecking=no ubuntu@172.31.35.49 ${dockerCmd}"
                    }
                }
            }
        }
    }
}
